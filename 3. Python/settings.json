{
  "python.analysis.autoImportCompletions": true,
  "python.analysis.fixAll": ["source.unusedImports"],
  "files.exclude": {
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.coverage": true,
    "**/.coverage.*": true,
    "**/.hypothesis": true,
    "**/.mypy_cache": true,
    "**/.nox": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.tox": true
  },

  //* Formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  //* Editor
  "editor.fontSize": 20,
  "editor.lineHeight": 30,
  "editor.fontWeight": "600",
  "editor.fontLigatures": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'JetBrains Mono'",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.linkedEditing": true,
  "editor.minimap.size": "fit",
  "editor.suggestSelection": "first",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.autohide": true,
  "editor.minimap.renderCharacters": false,

  //* Editor (Cursor)
  "editor.cursorBlinking": "expand",
  "editor.cursorWidth": 3,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.snippetSuggestions": "top",

  //* Workbench, Window & Explorer
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "Learn with Sumit - Peace of the eye",
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",
  "window.commandCenter": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.sideBar.location": "right",

  //* Better Comments
  "better-comments.tags": [
    {
      "tag": "//",
      "color": "#DBDBDB",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#00AC61",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "!",
      "color": "#EDD1F5",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#BFE2ED",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],

  //* To Do Highlight
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.defaultStyle": {
    "cursor": "pointer",
    "borderRadius": "2px"
  },
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#fff",
      "backgroundColor": "#034A44"
    },
    {
      "text": "NOTE:",
      "color": "#fff",
      "backgroundColor": "#124364"
    },
    {
      "text": "IMPORTANT:",
      "color": "#fff",
      "backgroundColor": "#14484D"
    },
    {
      "text": "FIXME:",
      "color": "#fff",
      "backgroundColor": "#810835"
    },
    {
      "text": "WARNING:",
      "color": "#000",
      "backgroundColor": "#FBBD23"
    }
  ],

  //* Emmet
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,

  //* Terminal
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font', 'JetBrains Mono'",
  "terminal.integrated.tabs.defaultIcon": "terminal-bash",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.cursorWidth": 5,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "debug.console.fontSize": 17,

  "diffEditor.ignoreTrimWhitespace": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "breadcrumbs.enabled": false,
  "markdown.validate.enabled": true,
  "git.openRepositoryInParentFolders": "never",
  "files.readonlyInclude": {
    "node_modules/**": true
  },
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.runInTerminal": true,
  "cSpell.userWords": [
    "autohide",
    "esbenp",
    "mypy",
    "pycache",
    "pytest",
    "Sumit",
    "todohighlight"
  ]
}
